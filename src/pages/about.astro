/* Accordion container stays the same */
.accordion{display:grid;gap:18px;justify-items:center;width:min(960px,92vw);margin-inline:auto}
.acc{width:100%;background:transparent}

/* Make summary tile share the SAME grid as the tables (so it lines up) */
.acc-summary{
  list-style:none; cursor:pointer; user-select:none;
  /* match table width */
  width:min(816px, 78vw);
  margin-inline:auto;
  /* mimic .tbl.t2 columns so col 1 aligns perfectly */
  display:grid; grid-template-columns:180px 1fr;
  padding:14px 16px;
  background:transparent;
  border:none;
}
.acc-summary::-webkit-details-marker{display:none}
/* Hide the summary when open so the table header in col 1 becomes the title */
.acc[open] > .acc-summary{display:none;}
.acc-summary:focus-visible{outline:2px solid var(--border);outline-offset:4px;border-radius:8px}

/* Make the summary text EXACTLY like .tbl .head (col 1) */
.acc-title{
  grid-column:1; /* first column */
  justify-self:end; /* right align like .tbl .head */
  font-weight:600;          /* same weight */
  color:var(--muted);       /* same color */
  font-size:inherit;        /* follows page font-size like .tbl .head */
  line-height:1.15;         /* matches .tbl .title rhythm */
  text-align:right;         /* mirror .tbl .head alignment */
}

/* Panel spacing lets the tables control their own padding */
.acc-panel{padding:0}

/* Strava badges â€” move CTA to top, keep stats bottom-right */
.strava{position:relative; text-decoration:none; color:inherit}
.stats{
  position:absolute; right:10px; bottom:10px;
  display:flex; align-items:center; gap:.35rem; flex-wrap:wrap;
  background:rgba(0,0,0,.55); color:#fff; font-weight:600;
  padding:.4rem .6rem; border-radius:10px; backdrop-filter:blur(2px);
  font-size:.9rem; line-height:1; z-index:1;
}
.stats .dot{opacity:.6}
.stats .metric{white-space:nowrap}

.strava-cta{
  position:absolute; left:10px; top:10px;   /* moved to TOP */
  color:#fff; font-weight:700;
  background:rgba(0,0,0,.35);
  padding:.25rem .5rem; border-radius:8px;
  z-index:2;                                  /* above the photo, not overlapping stats */
}

---
// src/pages/games/tone.astro
import Layout from "../../layouts/Layout.astro";

const pageTitle = "Tone — Play Online";
const gamePath = "/games/Tone/index.html";
const playStoreUrl = "https://play.google.com/store/apps/details?id=com.ZanyInc.ToneRemastered";
---

<Layout title={pageTitle} description="Play Tone (portrait 9:16) — a CMYK color-matching puzzle built with Unity WebGL.">
  <style>
    .game-wrap {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.25rem;
      margin-inline: auto;
    }
    @media (min-width: 980px) {
      .game-wrap {
        grid-template-columns: 1.1fr .9fr;
        align-items: start;
      }
    }

    .game-title {
      margin: 0;
      font-size: var(--h1-size);
      font-weight: 700;
      letter-spacing: -0.01em;
      line-height: calc(var(--line) - .15);
      color: var(--text);
    }

    /* Logo + description row */
    .logo-row {
      display: flex;
      align-items: flex-start;
      gap: .75rem;
      margin: .75rem 0 1rem;
    }
    .logo-row img {
      width: 96px;
      height: 96px;
      border-radius: none;
      flex-shrink: 0;
    }
    .logo-row p {
      margin: 0;
      font-size: var(--body-size);
      line-height: 1.5;
      color: var(--text);
    }

    .about-col h2 { margin: .75rem 0 .5rem; }
    .about-col h3 { margin: .75rem 0 .25rem; }
    .about-col p,
    .about-col ul {
      margin: 0 0 1rem 0;
      color: var(--text);
      font-size: var(--body-size);
      line-height: 1.5;
    }
    .about-col ul { padding-left: 1.25rem; }

    .about-col a {
      color: var(--text);
      text-decoration: none;
    }
    .about-col a:hover {
      text-decoration: underline;
      color: var(--muted);
    }

    .btnrow {
      display: flex;
      flex-wrap: wrap;
      gap: .5rem;
      margin-top: .5rem;
    }

    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: .5rem;
      padding: .55rem .8rem;
      border-radius: 5%;
      border: none;
      background: var(--card);
      color: var(--text);
      cursor: pointer;
      text-decoration: none;
      transition: transform .02s ease, background .15s ease;
    }
    .btn:hover { background: var(--hover); }
    .btn:active { transform: translateY(1px); }

    .btn.h2 {
      font-size: var(--h2-size);
      font-weight: 700;
      letter-spacing: -0.01em;
      line-height: 1.1;
      border-radius: 12px;
    }

    .btn.primary {
      background: var(--card);
      color: var(--text);
      border-color: var(--border);
    }

    /* ========== Game Stage (fills viewport height, preserves 9:16) ========== */
    .stage {
      position: relative;
      margin: 0 auto;
      overflow: hidden;
      max-width: 100%;
      background: #000;
      border-radius: none;
      border: none;
    
      height: calc(80svh - 2rem);
      max-height: 100%;
      aspect-ratio: 9 / 16;
      width: auto;
    }

    .stage iframe {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      border: 0;
      display: block;
    }


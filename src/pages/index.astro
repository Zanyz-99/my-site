---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Home — Zach Scholz" description="Navy Veteran">
  <section class="content home-wrap">
    <!-- Use the SAME structure/classes as About's header -->
    <div class="acc-summary acc-summary--static" aria-hidden="true">
      <span class="acc-toggle" aria-hidden="true"></span>
      <span class="acc-title home-title">Zach Scholz</span>
    </div>

    <!-- Subtitle aligned to start at the same x-position -->
    <p class="home-sub">Navy Veteran</p>
  </section>

  <style>
    /* Page spacing */
    .home-wrap { width: 100%; margin: 0 auto; padding: 3rem 0; }

    /* Reuse your About header layout exactly */
    .acc-summary {
      width: 100%;
      display: flex;
      align-items: center;
      gap: 0.6rem;            /* <-- same as About */
      padding: 6px 0;         /* <-- same as About (vertical only) */
      user-select: none;
      background: none;
      border: 0;
    }

    .acc-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 1.25rem;         /* <-- same as About */
      font-size: calc(var(--h1-size) * 0.8);
      font-weight: 1000;
      line-height: 1;
      color: var(--text);
      text-align: center;
    }

    /* Hide the +/– glyph on the Home page, keep the exact width */
    .acc-summary--static .acc-toggle::before { content: ''; }

    .acc-title {
      margin: 0;
      font-size: var(--h1-size);
      font-weight: 1000;
      letter-spacing: -0.01em;
      line-height: calc(var(--line) - .15);
      color: var(--text);
    }

    /* Style hook if you want to tweak Home title separately later */
    .home-title { }

    /* Subtitle left edge = toggle width + gap (matches About header start) */
    .home-sub {
      margin: .25rem 0 0;
      color: var(--muted);
      font-size: clamp(16px, 2.2vw, 18px);
      margin-left: calc(1.25rem + 0.6rem);
    }
  </style>
</Layout>

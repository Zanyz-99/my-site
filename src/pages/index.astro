  { name: 'GitHub', href: 'https://github.com/yourhandle' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/yourhandle/' },
  { name: 'Email', href: 'mailto:you@example.com' },
];
const projects = [
  {
    title: 'Project A',
    desc: 'One-liner showing impact or what it does.',
    href: '#',
    tags: ['TypeScript','Astro','API'],
  },
  {
    title: 'Project B',
    desc: 'Short description emphasizing results.',
    href: '#',
    tags: ['Python','Data'],
  },
  {
    title: 'Project C',
    desc: 'Another highlight. Keep it crisp.',
    href: '#',
    tags: ['Mapping','GIS'],
  },
];
const games = [
  {
    title: 'Tone',
    desc: 'Ear/reaction trainer (Unity WebGL, portrait 9:16).',
    href: '/games/Tone', // <-- link to your Astro page (NOT the WebGL index.html)

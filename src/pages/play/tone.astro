---
const gamePath = "/games/Tone/index.html";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Play</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden; /* prevent page scrollbars */
      }
      .frame {
        position: fixed;
        inset: 0;          /* top/right/bottom/left: 0 */
        width: 100vw;
        height: 100dvh;    /* handles mobile browser UI better than 100vh */
        border: 0;
        display: block;
      }
    </style>
  </head>
  <body>
    <iframe
      class="frame"
      src={gamePath}
      allow="fullscreen; gamepad; xr-spatial-tracking"
      loading="eager"
    ></iframe>
  </body>
</html>

---
const gamePath = "/games/Tone/index.html"; // your build path
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Play</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      .stage {
        width: min(100vw, 1200px);   /* cap max width if you want */
        aspect-ratio: 16 / 9;        /* keep it 16:9 */
        margin: 2rem auto;
        position: relative;
      }
      .stage > iframe {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        border: 0;
        display: block;
        overflow: hidden;            /* hide inner overflow if any */
      }
      body {
        margin: 0;
        background: #0b0b0b;         /* optional backdrop */
      }
    </style>
  </head>
  <body>
    <div class="stage">
      <iframe
        src={gamePath}
        allow="fullscreen; gamepad; xr-spatial-tracking"
        scrolling="no"
      ></iframe>
    </div>
  </body>
</html>
